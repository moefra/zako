{
    "compilerOptions": {
        "paths": {
            "zmake:semver": ["../dist/semver/index.d.ts"],
            "zmake:rt": ["../dist/rt.d.mts"],
            "zmake:core": ["../dist/core.d.mts"]
        },
        "moduleResolution": "bundler",
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "allowImportingTsExtensions": false,
        "alwaysStrict": true,
        "target": "ESNext",
        "module": "ESNext",
        "newLine": "lf",
        "verbatimModuleSyntax": true,
        "erasableSyntaxOnly": true,
        "isolatedModules": true,
        "isolatedDeclarations": true,
        "declaration": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": false
    },
    "files": ["./rt.ts", "./core.ts"]
}
