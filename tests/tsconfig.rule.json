{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "paths": {
            "zako:*": [
                "./.zako/types/zako/*.d.ts"
            ],
            "zako:rule": [
                "./.zako/types/zako/rule/rule.d.ts"
            ]
        },
        "typeRoots": [
            "./.zako/types/",
            "./node_modules/@types/"
        ],
        "outDir": "./dist/rule"
    },
    "include": [
        "./**/*.rule.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".zako"
    ],
    "references": [
        {
            "path": "./tsconfig.library.json"
        }
    ]
}