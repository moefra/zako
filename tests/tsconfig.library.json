{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "paths": {
            "zako:*": [
                "./.zako/types/zako/*.d.ts"
            ]
        },
        "typeRoots": [
            "./.zako/types/",
            "./node_modules/@types/"
        ],
        "outDir": "./dist/library"
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".zako",
        "./**/zako.ts",
        "./**/BUILD.ts",
        "./**/*.rule.ts",
        "./**/*.toolchain.ts",
        "./**/*.script.ts",
        "./**/scripts/**/*.ts"
    ],
    "references": []
}